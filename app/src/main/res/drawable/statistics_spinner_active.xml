<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/point"/>
            <corners android:radius="5dp"/>
        </shape>
    </item>
    <item android:gravity="center_vertical|right"
        android:right="6dp">
        <layer-list>
            <item android:gravity="right" android:width="10dp" android:height="5dp">
                <bitmap android:src="@drawable/ic_white_down"/>
            </item>
        </layer-list>
    </item>
</layer-list>