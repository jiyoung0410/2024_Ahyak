<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/point"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RecordSymptoms.SearchSymptomsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:fontFamily="@font/nanum_barun_gothic_bold"
            android:gravity="center"
            android:text="증상 검색"
            android:textSize="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:background="@drawable/white_radi_top_30dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/record_symptoms_cancle_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_cancle"
            android:layout_gravity="right"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanum_barun_gothic_bold"
            android:text="증상 검색"
            android:textSize="18dp"
            android:layout_marginStart="30dp"
            android:textColor="@color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/search_symptoms_et"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:hint="증상을 검색해보세요"
                android:textSize="14dp"
                android:layout_weight="1"
                android:layout_marginStart="33dp"
                android:layout_marginTop="30dp"

                android:background="@color/white"
                android:textColor="@color/gray1"
                android:fontFamily="@font/nanum_barun_gothic" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="9dp"
                android:layout_weight="7"
                android:layout_marginEnd="40dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="15dp"
                android:src="@drawable/ic_triangle"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray1"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/search_symptoms_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"/>


    </LinearLayout>

</LinearLayout>


