                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="삼각형"
                                android:textSize="12dp"
                                android:fontFamily="@font/nanum_barun_gothic"
                                android:textColor="@color/gray1"/>

                        </LinearLayout>

                        <LinearLayout
