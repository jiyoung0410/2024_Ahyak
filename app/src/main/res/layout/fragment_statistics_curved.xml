<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Statistics.StatisticsCurvedFragment">

    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="119dp"
            android:layout_height="20dp"
            android:background="@drawable/point_radi_5dp"
            android:gravity="center"
            android:orientation="horizontal">
            
            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/statistics_curved_spinner1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/statistics_spinner_active"
                android:popupElevation="18dp"
                android:popupBackground="@drawable/point_radi_5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="119dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/gray2_radi_5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/statistics_curved_spinner2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/statistics_spinner_inactive"
                android:popupElevation="18dp"
                android:popupBackground="@drawable/gray2_radi_5dp"/>

        </LinearLayout>

    </LinearLayout>

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/statistics_curved_linechart"
        android:layout_width="300dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="30dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>