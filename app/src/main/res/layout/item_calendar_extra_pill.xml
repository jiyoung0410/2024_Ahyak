<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="335dp"
    android:layout_height="50dp"
    android:layout_gravity="center"
    android:background="@drawable/white_radi_10dp"
    android:layout_marginBottom="18dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ic_pill"
        android:layout_width="25sp"
        android:layout_height="25sp"
        android:layout_marginStart="26dp"
        android:src="@drawable/ic_green_pill"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/item_calendar_extra_pill_name_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="타이레놀"
        android:textColor="@color/black"
        android:fontFamily="@font/nanum_barun_gothic_bold"
        app:layout_constraintStart_toEndOf="@id/ic_pill"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/item_calendar_extra_pill_eat_time_tv"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="12sp" />

    <TextView
        android:id="@+id/item_calendar_extra_pill_eat_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오후 2시"
        app:layout_constraintStart_toEndOf="@id/item_calendar_extra_pill_name_tv"
        android:fontFamily="@font/nanum_barun_gothic_bold"
        app:layout_constraintEnd_toStartOf="@id/more_ic"
        app:layout_constraintTop_toTopOf="@id/item_calendar_extra_pill_name_tv"
        app:layout_constraintBottom_toBottomOf="@id/item_calendar_extra_pill_name_tv"
        android:textSize="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textColor="@color/gray1"/>

    <ImageView
        android:id="@+id/more_ic"
        android:layout_width="5dp"
        android:layout_height="15dp"
        android:src="@drawable/more_ic"
        android:layout_marginEnd="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>




    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_calendar_extra_pill_delete_cl"
        android:layout_width="75dp"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/red_radi_right_10dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="삭제"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:fontFamily="@font/nanum_barun_gothic_bold"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>