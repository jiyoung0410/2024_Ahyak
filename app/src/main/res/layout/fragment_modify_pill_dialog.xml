<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/white_radi_20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PillRegister.ModifyPillDialogFragment">

    <TextView
        android:id="@+id/modify_pill_dialog_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="35dp"
        android:text="변경된 설정에 따라 기존 약 복용 설정을\n삭제하시겠습니까?"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:fontFamily="@font/nanum_barun_gothic_bold"
        android:gravity="center"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/modify_pill_dialog_btn1_cl"
        android:layout_width="268dp"
        android:layout_height="47dp"
        android:background="@drawable/point_radi_10dp"
        app:layout_constraintTop_toBottomOf="@id/modify_pill_dialog_title_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            android:text="모두 삭제하기"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:fontFamily="@font/nanum_barun_gothic_bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp"
            android:text="기존의 모든 복약 설정을 삭제하고 새로운 설정만 유지됩니다."
            android:textSize="8sp"
            android:textColor="@color/white"
            android:fontFamily="@font/nanum_barun_gothic"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/modify_pill_dialog_btn2_cl"
        android:layout_width="268dp"
        android:layout_height="47dp"
        android:background="@drawable/point_radi_10dp"
        app:layout_constraintTop_toBottomOf="@id/modify_pill_dialog_btn1_cl"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            android:text="미복용 약만 삭제하기"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:fontFamily="@font/nanum_barun_gothic_bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp"
            android:text="새 설정에 포함되지 않는 미복용 약만 삭제하고, 나머지 설정은 유지됩니다."
            android:textSize="8sp"
            android:textColor="@color/white"
            android:fontFamily="@font/nanum_barun_gothic"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/modify_pill_dialog_btn3_cl"
        android:layout_width="268dp"
        android:layout_height="47dp"
        android:background="@drawable/point_radi_10dp"
        app:layout_constraintTop_toBottomOf="@id/modify_pill_dialog_btn2_cl"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            android:text="삭제하지 않기"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:fontFamily="@font/nanum_barun_gothic_bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp"
            android:text="기존 설정을 유지하며, 새로운 복약 설정을 추가합니다."
            android:textSize="8sp"
            android:textColor="@color/white"
            android:fontFamily="@font/nanum_barun_gothic"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/modify_pill_dialog_cancel_cl"
        android:layout_width="268dp"
        android:layout_height="38dp"
        android:background="@drawable/gray3_radi_10dp"
        app:layout_constraintTop_toBottomOf="@id/modify_pill_dialog_btn3_cl"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="취소"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:fontFamily="@font/nanum_barun_gothic_bold"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="268dp"
        android:layout_height="26dp"
        app:layout_constraintTop_toBottomOf="@id/modify_pill_dialog_cancel_cl"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>