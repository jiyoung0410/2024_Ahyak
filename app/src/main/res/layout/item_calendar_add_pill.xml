<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/add_pill_cl"
    android:layout_width="335dp"
    android:layout_height="50dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ic_pill"
        android:layout_width="25sp"
        android:layout_height="25sp"
        android:layout_marginStart="26dp"
        android:src="@drawable/ic_red_pill"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/item_calendar_pill_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="콘서타"
        android:fontFamily="@font/nanum_barun_gothic_bold"
        app:layout_constraintStart_toEndOf="@id/ic_pill"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="12sp" />

    <TextView
        android:id="@+id/item_calendar_pill_volume_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="18mg"
        android:fontFamily="@font/nanum_barun_gothic_bold"
        app:layout_constraintStart_toEndOf="@id/item_calendar_pill_name_tv"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="5sp" />

    <LinearLayout
        android:id="@+id/item_calendar_pill_take_state_ll"
        android:layout_width="60sp"
        android:layout_height="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="26dp"
        android:gravity="center"
        android:background="@drawable/point_radi_50dp">

        <TextView
            android:id="@+id/item_calendar_pill_eat_state_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="복용"
            android:fontFamily="@font/nanum_barun_gothic_bold"
            android:textSize="10sp"
            android:textColor="@color/white"/>

    </LinearLayout>
    
    <View
        android:layout_width="301dp"
        android:layout_height="1dp"
        android:background="@color/gray3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>