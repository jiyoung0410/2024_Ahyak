<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Statistics.StatisticsFragment">

    <ImageView
        android:id="@+id/statistics_title_icon_iv"
        android:layout_width="24dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="26dp"
        android:layout_marginStart="24dp"
        android:src="@drawable/ic_calender_point"/>

    <ImageView
        android:id="@+id/statistics_title_prev_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintStart_toEndOf="@id/statistics_title_icon_iv"
        app:layout_constraintTop_toTopOf="@id/statistics_title_icon_iv"
        app:layout_constraintBottom_toBottomOf="@id/statistics_title_icon_iv"
        android:layout_marginStart="9dp"
        android:src="@drawable/ic_gray1_prev"/>

    <TextView
        android:id="@+id/statistics_title_content1_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/statistics_title_prev_iv"
        app:layout_constraintBottom_toBottomOf="@id/statistics_title_icon_iv"
        android:text="1월 4일 ~ 1월 11일"
        android:textSize="14sp"
        android:textColor="@color/point"
        android:fontFamily="@font/nanum_barun_gothic_bold"/>

    <ImageView
        android:id="@+id/statistics_title_next_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintStart_toEndOf="@id/statistics_title_content1_tv"
        app:layout_constraintTop_toTopOf="@id/statistics_title_icon_iv"
        app:layout_constraintBottom_toBottomOf="@id/statistics_title_icon_iv"
        android:src="@drawable/ic_gray1_next"/>

    <TextView
        android:id="@+id/statistics_title_content2_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/statistics_title_next_iv"
        app:layout_constraintTop_toTopOf="@id/statistics_title_content1_tv"
        app:layout_constraintBottom_toBottomOf="@id/statistics_title_content1_tv"
        android:text="까지의 기록이에요"
        android:textSize="14sp"
        android:textColor="@color/gray1"
        android:fontFamily="@font/nanum_barun_gothic_bold"/>

    <LinearLayout
        android:id="@+id/statistics_content_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/statistics_title_icon_iv"
        android:layout_marginHorizontal="30dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="복용률"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/nanum_barun_gothic_bold"/>
        
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/white_radi_10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="21dp"
                android:text="환절기 피부질환"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/nanum_barun_gothic_bold"/>
            
            <ProgressBar
                android:layout_width="131dp"
                android:layout_height="12dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="14dp"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:indeterminate="false"
                android:progressDrawable="@drawable/point_horizonal_progress"
                android:progress="80"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/white_radi_10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="21dp"
                android:text="특발성 돌풍"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/nanum_barun_gothic_bold"/>

            <ProgressBar
                android:layout_width="131dp"
                android:layout_height="12dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="14dp"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:indeterminate="false"
                android:progressDrawable="@drawable/point_horizonal_progress"
                android:progress="40"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:text="부작용 발현 히스토리"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/nanum_barun_gothic_bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="좌우로 스와이프하세요. 두 가지 종류의 그래프를 확인할 수 있어요!"
            android:textSize="10sp"
            android:textColor="@color/gray1"
            android:fontFamily="@font/nanum_barun_gothic"/>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/statistics_content_ll"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="16dp"
        android:background="@drawable/white_radi_top_30dp">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/statistics_tab"
            android:layout_width="297dp"
            android:layout_height="26dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="91dp"
            android:background="@drawable/gray3_radi_10dp"
            app:tabBackground="@drawable/statistics_tab_selector"
            app:tabIndicatorHeight="0dp"
            app:tabRippleColor="@android:color/transparent"
            app:tabTextColor="#878787"
            app:tabSelectedTextColor="#878787"/>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/statistics_area_vp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/statistics_tab"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>